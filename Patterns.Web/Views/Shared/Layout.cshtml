@using System.Web.Optimization
@using Patterns.Resources
@model Patterns.Web.Models.BaseModel
<!DOCTYPE html>
<html>
<head>
  <title>@((!String.IsNullOrEmpty(Model.Title) ? Model.Title + ". " : "") + Strings.DrawPatternsOnline)</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0 , maximum-scale=1, user-scalable=no">
  <meta name="title" content="@(!String.IsNullOrEmpty(Model.Title) ? Model.Title + ". " : "")" />
  <meta name="description" content="@(Strings.Description + Model.Description)" />
  <meta name="keywords" content="@Strings.Keywords" />
  <meta property="og:image" content="@Model.ImageSrc"/>
</head>
  <body>
    @Html.Partial("Menu", Model)
    <div class="wrapper">
      <div class="content">
        @RenderBody()
      </div>
      <div id="footer">
        <div class="content">
          <a class="logo" href="@Url.Action("Index", "Patterns")"><img src="@Url.Content("~/Content/i/logo.png")" /></a>
          @Html.Partial("LanguageAndContacts")
        </div>
      </div>
    </div>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/reset.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/styles.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/viewer/css/styles.css")">
    <link rel="stylesheet" type="text/css" media="only screen and (max-device-width: 480px)" href="@Url.Content("~/Content/viewer/css/styles.mobile.css")" />
    <link rel="image_src" href="@Model.ImageSrc" />
    <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
    @Scripts.Render("~/bundles/viewer/js")
    <script type="text/javascript" src="http://vk.com/js/api/share.js?90" charset="windows-1251"></script>
    <script>
      Gallery('@Url.Content("~/")');
    </script>
    @Html.Partial("Analytics")
  </body>
</html>
